# Netlify Blobs Configuration (for client-side environment detection)
VITE_NETLIFY_SITE_ID=your_site_id_here

# Netlify Functions Configuration (server-side, secure)
NETLIFY_SITE_ID=your_site_id_here
NETLIFY_TOKEN=your_netlify_token_here

# Database Configuration (Neon PostgreSQL)
VITE_DATABASE_URL=postgresql://username:password@host/database
